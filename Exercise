#include <iostream>
#include <string>
using namespace std;
int main()
{
	int x = 1, j = 1;

	while (x <= 5)
	{
		j = 1;

		while (j <= x)
		{
			cout << "*"; //print 5 stars
			j++;

		}
		cout << endl;
		x++;
	}
	return 0;
}



